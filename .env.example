# Server
PORT=8787
NODE_ENV=production

# SQLite file (mounted via docker-compose volume)
DATABASE_PATH=/data/yablog.db

# Redis (optional; for caching)
# Example: redis://redis:6379/0 (when using docker-compose)
REDIS_URL=

# Auth
JWT_SECRET=change-me-in-prod
ADMIN_USERNAME=your-admin
ADMIN_PASSWORD=your-password
RESET_ADMIN_ON_START=0

# Cookie (set COOKIE_SECURE=1 when behind HTTPS)
COOKIE_SECURE=0
COOKIE_NAME=yablog_token

# Serve built React app (Dockerfile copies it here)
WEB_DIST_PATH=/app/apps/web/dist
